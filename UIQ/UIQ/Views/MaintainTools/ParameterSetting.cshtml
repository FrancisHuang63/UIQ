@using UIQ.Controllers
@model Parameter
@{
    Layout = null;
    var isSaveSuccess = (bool)ViewBag.IsSaveSuccess;
}

<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml"  lang="zh-hant">
    <head>
        <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
        <link href="~/css/style.css" rel="stylesheet" type="text/css" />
        <script src="~/js/jquery-1.3.2.min.js"></script>

        <title>Parameter Setting</title>
    </head>
    <body>
        <form method="post" action="@(Url.Action(nameof(MaintainToolsController.ParameterSetting)))" class="form" enctype="multipart/form-data">
        <div id="loading"><img alt="loading" src="~/images/clock.gif"></div>
        <div class=topic>Parameter Setting</div>
        <div class="mt-10">
            <span> Homepage Update Frequency : </span>
            <input type="text" name="Parameter_Value"  value="@Model?.Parameter_Value" /> <span>sec</span>
            <input type="hidden" name="Parameter_Id"  value="@Model?.Parameter_Id" /> 
        </div>

        <input class="mt-10" id="btnSave" type=submit value="Save" style="width:100px"><br>
        <span id="result" style="color:red;"></span>
        </form>

        <script>
            $(function(){
                if('@(isSaveSuccess)' == 'True'){
                    $('#result').text(`Success to save refresh time: ${@(Model?.Parameter_Value)} sec.`)
                }
            })
        </script>
    </body>
</html>


