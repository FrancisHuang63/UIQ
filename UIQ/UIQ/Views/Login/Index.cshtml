@{
	Layout = null;
	var message = ViewData["Message"];
}

<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" lang="zh-hant">
<head>
	<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
	<title>NWP Login page</title>
	<link href="~/css/style.css" rel="stylesheet" type="text/css" />
</head>

<body>
	<form id="form1" name="form1" method="post" target="_self" action="@Url.Action("Verify", "Login")">
		<table width="100" border="0" align="center" cellpadding="0" cellspacing="0" aria-describedby="login">
			<tr style="display:none;">
				<th scope="col"></th>
			</tr>
			<tr>
				<td><img src="~/images/LOIGN_01.jpg" width="32" height="600" alt="" /></td>
				<td>
					<table width="100" border="0" cellspacing="0" cellpadding="0" aria-describedby="login">
						<tr style="display:none;">
							<th scope="col"></th>
						</tr>
						<tr>
							<td><img src="~/images/LOIGN_02.jpg" width="199" height="202" alt="" /></td>
							<td><img src="~/images/LOIGN_FX10_03.png" width="515" height="202" alt="" /></td>
							<td><img src="~/images/LOIGN_04.jpg" width="191" height="202" alt="" /></td>
						</tr>
						<tr>
							<td><img src="~/images/LOIGN_06.jpg" width="199" height="243" alt="" /></td>
							<td valign="bottom" background="~/images/LOIGN_FX10_07.png">
								<table width="70%" border="0" align="center" cellpadding="0" cellspacing="0" class="logintable" aria-describedby="logintable">
									<tr style="display:none;">
										<th scope="col"></th>
									</tr>
									<tr>
										<td height="30"><div align="right">帳號：</div></td>
										<td><input name="account" type="text" id="id" size="25" tabindex="1" /></td>
										<td rowspan="2"><input alt="loginicon" type="image" src="~/images/loginicon.jpg" tabindex="3" onclick="document.form1.submit();" /></td>
									</tr>
						</tr>
						<tr>
							<td height="30"><div align="right">密碼：</div></td>
							<td><input name="password" type="password" id="pw" size="25" tabindex="2" /></td>
						</tr>
						<tr>
							<td height="50">&nbsp;</td>
							<td>&nbsp;</td>
							<td>&nbsp;</td>
						</tr>
					</table>
				</td>
				<td><img src="~/images/LOIGN_08.jpg" width="191" height="243" alt="" /></td>
			</tr>
			<tr>
				<td><img src="~/images/LOIGN_09.jpg" width="199" height="155" alt="" /></td>
				<td valign="top" background="~/images/LOIGN_10.jpg">
					<br />
					<table width="80%" border="0" align="center" cellpadding="0" cellspacing="0" aria-labelledby="top">
						<tr style="display:none;">
							<th scope="col"></th>
						</tr>
						<tr>
							<td><img alt="login" src="~/images/logo.png" width="50" height="50" /></td>
							<td class="footer">
								建議瀏覽器使用IE 9.0或Firefox 17.0以上     <br>最佳解析度:1024x768<br />
								中央氣象局 版權所有
							</td>
						</tr>
					</table>
				</td>
				<td><img alt="login_11" src="~/images/LOIGN_11.jpg" width="191" height="155" alt="" /></td>
			</tr>
		</table></td>
		<td><img src="~/images/LOIGN_05.jpg" width="32" height="600" alt="" /></td>
		</tr>
		</table>
	</form>
</body>
<script>
	$(function(){
		if('@message' != null){
			alert('@message'); 
			window.location = '@Url.Action("Index")';
		}
	});
</script>
</html>
